[
  {
    "id": "wordpress-detect",
    "info": {
      "name": "WordPress",
      "author": "test",
      "tags": "detect,tech,wordpress,cms",
      "severity": "info",
      "metadata": {
        "product": "WordPress",
        "vendor": "WordPress"
      }
    },
    "http": [
      {
        "method": "GET",
        "path": ["{{BaseURL}}/"],
        "matchers": [
          {
            "type": "word",
            "words": ["wp-content", "wp-includes"],
            "case-insensitive": true
          }
        ]
      }
    ]
  },
  {
    "id": "joomla-detect",
    "info": {
      "name": "Joomla",
      "author": "test",
      "tags": "detect,tech,joomla,cms",
      "severity": "info",
      "metadata": {
        "product": "Joomla",
        "vendor": "Joomla"
      }
    },
    "http": [
      {
        "method": "GET",
        "path": ["{{BaseURL}}/"],
        "matchers": [
          {
            "type": "regex",
            "regex": ["Joomla!\\s+([\\d.]+)"],
            "case-insensitive": true
          }
        ]
      }
    ]
  },
  {
    "id": "drupal-detect",
    "info": {
      "name": "Drupal",
      "author": "test",
      "tags": "detect,tech,drupal,cms",
      "severity": "info",
      "metadata": {
        "product": "Drupal",
        "vendor": "Drupal"
      }
    },
    "http": [
      {
        "method": "GET",
        "path": ["{{BaseURL}}/"],
        "matchers": [
          {
            "type": "word",
            "words": ["X-Drupal-Cache"],
            "part": "header",
            "case-insensitive": true
          }
        ]
      }
    ]
  }
]
